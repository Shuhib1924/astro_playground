            <section
                class="flex justify-center items-center bg-blue-100 snap-start h-screen"
            >
                <div
                    x-data="{
              items: [
                  {title: 'Item 1', body: 'Body 1'},
                  {title: 'Item 2', body: 'Body 2'},
                  {title: 'Item 3', body: 'Body 3'},
                  {title: 'Item 4', body: 'Body 4'},
              ],
              activeItem: null,
              selectItem(item) {
                  if (this.activeItem === item) {
                      this.activeItem = null
                  } else {
                      this.activeItem = item
                  }
              }
            }"
                    class="w-4/5"
                >
                    <template x-for="item in items">
                        <div class="">
                            <div
                                @click="selectItem(item)"
                                class="flex justify-between items-center bg-gray-50 px-2 py-1 border font-semibold hover:text-blue-400 cursor-pointer"
                            >
                                <span x-text="item.title"></span>
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-4 h-4 transition-all"
                                    :class="{'rotate-90': activeItem === item}"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M9 5l7 7-7 7"></path>
                                </svg>
                            </div>
                            <div
